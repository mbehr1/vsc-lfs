{
	"name": "vsc-lfs",
	"displayName": "Large file support for extensions",
	"description": "Extension that allows to open large files so that other extensions can work with them.",
	"version": "1.0.2",
	"license": "CC BY-NC-SA 4.0",
	"publisher": "mbehr1",
	"author": {
		"name": "Matthias Behr",
		"email": "mbehr+vsclfs@mcbehr.de"
	},
	"repository": "github:mbehr1/vsc-lfs",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.lfsOpenFile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.lfsOpenFile",
				"title": "open large file..."
			}
		],
		"configuration": [
			{
				"title": "Large file (vsc-lfs)",
				"properties": {
					"vsc-lfs.fileFilters": {
						"type": [
							"string"
						],
						"default": [
							"txt",
							"TXT",
							"log",
							"LOG"
						],
						"description": "Specifies the file extensions that can be opened."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.39.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
